{
    // https://qiita.com/fsd_maclala/items/089f9701131905e95425
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "name": "Launch debugger",
        "request": "launch",
        "runtimeArgs": [
          "run",
          "start:debug"
        ],
        "runtimeExecutable": "npm",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "sourceMaps": true,
        "envFile": "${workspaceFolder}/.env",
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal",
      },
    ]
  }
  